<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BhashaVerse" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to your full-screen image. -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- Optional: Remove the animated icon if you don't want it. -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>


        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.BhashaVerse</item>
    </style>
</resources>